{% extends 'base.html.twig' %}

{% block title %}Etudiants index{% endblock %}

{% block body %}
    <h1>Etudiants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Date_naissance</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.matricule }}</td>
                <td>{{ etudiant.dateNaissance ? etudiant.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ etudiant.adresse }}</td>
                <td>{{ etudiant.telephone }}</td>
                <td>{{ etudiant.photo }}</td>
                <td>
                    <a href="{{ path('app_students_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('app_students_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_students_new') }}">Create new</a>
{% endblock %}
