{% extends 'base.html.twig' %}

{% block title %}Documents index{% endblock %}

{% block body %}
    <h1>Documents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Fichier</th>
                <th>Date_upload</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.titre }}</td>
                <td>{{ document.fichier }}</td>
                <td>{{ document.dateUpload ? document.dateUpload|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_docs_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('app_docs_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_docs_new') }}">Create new</a>
{% endblock %}
