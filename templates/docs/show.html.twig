{% extends 'base.html.twig' %}

{% block title %}Documents{% endblock %}

{% block body %}
    <h1>Documents</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ document.titre }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ document.fichier }}</td>
            </tr>
            <tr>
                <th>Date_upload</th>
                <td>{{ document.dateUpload ? document.dateUpload|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_docs_index') }}">back to list</a>

    <a href="{{ path('app_docs_edit', {'id': document.id}) }}">edit</a>

    {{ include('docs/_delete_form.html.twig') }}
{% endblock %}
