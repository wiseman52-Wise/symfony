{% extends 'base.html.twig' %}

{% block title %}Notes index{% endblock %}

{% block body %}
    <h1>Notes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>Date_eval</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.note }}</td>
                <td>{{ note.dateEval ? note.dateEval|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_marks_show', {'id': note.id}) }}">show</a>
                    <a href="{{ path('app_marks_edit', {'id': note.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_marks_new') }}">Create new</a>
{% endblock %}
